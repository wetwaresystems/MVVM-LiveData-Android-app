<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_25282B</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_21</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/color_52575c</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/color_52575c</item>
    </style>

    <style name="TextDescription">
        <item name="android:fontFamily">@font/pingfangsc_regular</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/color_52575c</item>
    </style>

    <style name="TextViewRobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:textColor">@color/color_4a4a4a</item>
    </style>

    <style name="TextViewErrorSubText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/color_929292</item>
    </style>

</resources>