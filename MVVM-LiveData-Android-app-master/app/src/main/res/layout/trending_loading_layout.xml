<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_21"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_21">

    <View
        android:id="@+id/view_trending_loading_circle"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/circle_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_trending_loading_top_line"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@drawable/line_drawable"
        app:layout_constraintStart_toEndOf="@id/view_trending_loading_circle"
        app:layout_constraintTop_toTopOf="@id/view_trending_loading_circle" />

    <View
        android:id="@+id/view_trending_loading_bottom_line"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/line_drawable"
        app:layout_constraintStart_toEndOf="@id/view_trending_loading_circle"
        app:layout_constraintTop_toBottomOf="@id/view_trending_loading_top_line" />


</androidx.constraintlayout.widget.ConstraintLayout>
